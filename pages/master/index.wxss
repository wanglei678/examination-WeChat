.master .item-title {
  text-align: center;
}
.master .item-title .title {
  font-size: 20px;
  font-weight: 600;
}
.master .course {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}
.master .course .video-box {
  position: relative;
  flex: 1;
  padding-left: 4rpx;
}
.master .course .video-box .poster {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100;
  left: 4rpx;
}
.master .course .video {
  width: 100%;
  height: 150px;
}
.master .course .course-info {
  width: 48%;
  padding-left: 5px;
}
.master .course .course-info .info-title {
  font-size: 15px;
  font-weight: 500;
}
.master .course .course-info .little-title {
  font-size: 13px;
}
.master .course .course-info .info-desc {
  font-size: 13px;
  color: #aeaeae;
  display: -webkit-box;
  -webkit-line-clamp: 7;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
